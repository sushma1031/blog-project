<%- include("../partials/header"); -%>

  <div class="d-flex align-items-center justify-content-center pt-5">
    <div class="text-center">
      <h1 class="display-3 fw-bold"><%= statusCode %></h1>
      <p class="fw-bold text-responsive mb-8"><%= typeof message !== "undefined" ? message : "Could not process request." %></p>
      <% if (typeof fixes !== "undefined" && fixes.length) { %>
        <div class="alert alert-warning mt-4 text-start">
          <p class="mb-2">Please check the following and try again:</p>
          <ul class="mb-0">
            <% fixes.forEach((f) => { %>
              <li><%= f %></li>
            <% }) %>
          </ul>
        </div>
      <% }%>
    </div>
  </div>

<%- include("../partials/footer"); -%>