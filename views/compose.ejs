<%- include("partials/header"); -%>

  <h1>Compose</h1>
    <form action="/compose" method="post" encType="multipart/form-data">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" class="form-control" name="username" id="username">
      </div>
      <div class="mb-3">
        <label for="postTitle" class = "form-label">Title</label>
        <input type="text" class="form-control" name="postTitle" id="postTitle">
      </div>
      <div class="mb-3">
        <label for="preview" class="form-label">Preview</label>
        <textarea class="form-control" name="preview" id="preview" rows="3"></textarea>
        <small id="previewHelp" class="form-text text-muted">Add a short description or highlight for your post.</small>
      </div>
      <div class="mb-3">
        <label for="postTitle" class="form-label">Post</label>
        <textarea class="form-control" name="postBody" id="postBody" rows="5"></textarea>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Choose an image</label>
        <input class="form-control" type="file" name="image" id="image">
      </div>
      <button class="btn btn-secondary" type="submit" name="button">Publish</button>
    </form>


  <%- include("partials/footer"); -%>