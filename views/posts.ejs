<%- include("partials/header"); -%>

  <h1 class="fs-3 section-title"><span class="underline">All Posts</span></h3>

  <div class="row py-5 px-3 px-lg-5">
    <% posts.forEach((post, pindex)=> { %>
      <div class="col-lg-6 px-3 pt-2 border-bottom">

        <div class="flex">

          <h6 class="title-link pe-2"><a href="/posts/<%=post._id%>">
              <%= post.title %>
            </a>
          </h6>

          <% if(auth) { %>
            <div class="dropdown">
              <a class="dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"></a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/posts/<%=post._id%>" class="link">View</a></li>
                <li><a class="dropdown-item" href="/edit/<%=post._id%>" class="link">Edit</a></li>
                <li>
                  <a class="dropdown-item" href="#" role="button" data-bs-toggle="modal"
                    data-bs-target="#confirmDeletion<%=pindex%>">Delete</a>
                </li>
              </ul>
            </div>
            <!-- Deletion Confirmation Modal -->
            <div class="modal fade" id="confirmDeletion<%=pindex%>" tabindex="-1" aria-labelledby="Confirm post deletion"
              aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="confirmDeletionLabel">Confirm Deletion</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    You are about to delete: <span class="bold">
                      <%= post.title %>
                    </span>
                    <br />
                    <p class="warning-text bold">This action cannot be undone.</p>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <a class="btn btn-danger" href="/delete/posts/<%=post._id%>" class="link">Delete</a>
                  </div>
                </div>
              </div>
            </div>

            <% } %>
        </div>
        <p>
          <em>
            <span class="opacity-60">
              <%= post.dateString %>
            </span>
          </em>
        </p>


      </div>
      <% }) %>

  </div>


  <%- include("partials/footer"); -%>